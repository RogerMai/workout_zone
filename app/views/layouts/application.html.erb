<!DOCTYPE html>
<html>
  <head>
    <title>WorkoutZone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <nav class="level">
      <ul>
        <%= link_to "Home", root_path, class: "level.item" %> | 
        <%= link_to "About", workout_zone_about_path, class: "level.item" %> | 
        <%= link_to "Category", gyms_path, class: "level.item" %> |
        <% if user_signed_in? %>
          <h4>Welcome, <%= current_user.email %> ! 
            | <p><%= link_to 'Logout', destroy_user_session_path, method: :delete %></p>
          </h4>
        <% else %>
          <h4>
            Welcome !
            | <%= link_to 'Login', new_user_session_path %>
            | <%= link_to 'Register', new_user_registration_path %>
          </h4>
        <% end %>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
